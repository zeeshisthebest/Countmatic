<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e36414"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity2">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_saved"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#ED7F3A"
        android:padding="10dp"
        android:scrollbars="vertical" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:background="#E8E7E7">

        <TextView
            android:id="@+id/tv_tally_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e36414"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="@string/tally_tite"
            android:textAlignment="center"
            android:textColor="@color/browser_actions_bg_grey"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tally"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="00000."
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/btn_count"
            app:layout_constraintLeft_toLeftOf="@id/btn_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tally_name" />

        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Steps: 1"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/btn_increase"
            app:layout_constraintLeft_toLeftOf="@id/btn_decrease"
            app:layout_constraintRight_toRightOf="@id/btn_increase"
            app:layout_constraintTop_toBottomOf="@id/btn_save" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_menu_save"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_tally"
            app:layout_constraintTop_toBottomOf="@id/tv_tally_name" />

        <Button
            android:id="@+id/btn_increase"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#fff"
            app:layout_constraintLeft_toRightOf="@id/btn_decrease"
            app:layout_constraintTop_toBottomOf="@id/tv_steps" />

        <Button
            android:id="@+id/btn_decrease"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="-"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_steps" />

        <Button
            android:id="@+id/btn_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Count"
            android:textColor="#fff"
            app:layout_constraintLeft_toRightOf="@id/btn_increase"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_steps" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>